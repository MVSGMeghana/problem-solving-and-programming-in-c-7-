#include <stdio.h>
void even();
void odd();
void main()
{
even();
odd();
}
void even()
{
int a,b,i;
printf("enter the lower limit");
scanf("%d",&a);
printf("enter the upper limit");
scanf("%d",&b);
for(i=a;i<=b;i++)
{
if(a%2==0)
{
printf("\n%d",i++);
}
else
{
printf("\n%d",++i);
}
}
}

void odd()
{
int a,b,i;
printf("\nenter the lower limit");
scanf("%d",&a);
printf("enter the upper limit");
scanf("%d",&b);
for(i=a;i<=b;i++)
{
if(a%2==0)
{
printf("\n%d",++i);
}
else
{
printf("\n%d",i++);
}
}
}
output
enter the lower limit1
enter the upper limit10
2
4
6
8
10
enter the lower limit1
enter the upper limit10
1
3
5
7
