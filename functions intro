#include<stdio.h>  
void sum();
void sub();
void multi();
void div();
void main()  
{ 
    sum();
    
}
void sum()
{
 float a,b;
    printf("\nenter two numbers");
    scanf("%f %f",&a,&b);   
printf("the sum is %f",a+b);
}
void sub()
{
float a,b;
    printf("\nenter two numbers");
    scanf("%f %f",&a,&b);
printf("the subtraction is %f",a-b);
}
void multi()
{
float a,b;
    printf("\nenter two numbers");
    scanf("%f %f",&a,&b);
printf("the multiplication is %f",a*b);
}
void div()
{
float a,b;
    printf("\nenter two numbers");
    scanf("%f %f",&a,&b);
printf("the divison is %f",a/b);
}
